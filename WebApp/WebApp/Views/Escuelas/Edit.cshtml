@model WebApp.Models.Escuela

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Escuela</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CodigoEscuela" class="control-label">Código</label>
                <input asp-for="CodigoEscuela" class="form-control" />
                <span asp-validation-for="CodigoEscuela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facultad" class="control-label"></label>
                <select asp-for="IdFacultad" class="form-control" asp-items="@ViewBag.Facultades">
                </select>
                <span asp-validation-for="IdFacultad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Estado" class="form-control">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
