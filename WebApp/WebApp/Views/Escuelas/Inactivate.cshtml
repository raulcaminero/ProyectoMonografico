@model WebApp.Models.Escuela

@{
    ViewData["Title"] = "Inactivar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Inactivar</h1>

<h3>¿Está seguro que desea inactivar esto?</h3>
<div>
    <h4>Escuela</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoEscuela)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Inactivate">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Inactivar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>
