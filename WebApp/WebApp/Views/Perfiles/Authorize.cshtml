@model WebApp.Models.Usuario

@{
    ViewData["Title"] = "Autorizar";
}

<h1>Autorizar usuario</h1>

<h3>Está seguro que quiere autorizar el registro del usuario como <strong>@Html.DisplayFor(model => model.Rol.Descripcion)</strong>?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Correo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Nombre completo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rol.Descripcion)
        </dd>
    </dl>

    <form asp-action="Authorize">
        <input type="hidden" asp-for="codigo" />
        <input type="submit" value="Autorizar" class="btn btn-primary" />
        <a asp-action="Index">Regresar a la lista de usuarios</a>
    </form>
</div>
