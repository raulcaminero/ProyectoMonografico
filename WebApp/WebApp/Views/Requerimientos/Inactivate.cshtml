@model WebApp.Models.Requerimiento

@{
    ViewData["Title"] = "Inactivar requerimiento";
}

<h1>Inactivar requerimiento</h1>

<h3>¿Está seguro que quiere inactivar el requerimiento?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoServicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoServicio.TipoServicioDescripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Escuela.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Archivo)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Archivo" asp-action="Descargar" asp-route-id="@Model.Archivo.Id">Ver documento</a>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @($"{Model.Usuario.primer_nombre} {Model.Usuario.primer_nombre} <{Model.Usuario.Email}>")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Inactivate">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Inactivar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
