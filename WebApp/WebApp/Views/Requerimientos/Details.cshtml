@model WebApp.ViewModels.Requerimientos.ViewRequerimientoViewModel

@{
    ViewData["Title"] = "Detalles del requerimiento";
}

<h1>Detalles del requerimiento</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoServicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoServicio.TipoServicioDescripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Escuela.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Archivo)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Archivos" asp-action="Descargar" asp-route-idArchivo="@Model.Archivo.Id">Descargar</a>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @($"{Model.Usuario.primer_nombre} {Model.Usuario.primer_apellido} <{Model.Usuario.Email}>")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Editar", "Edit", new { codigo = Model.Codigo }) |
    <a asp-action="Index">Regresar a la lista</a>
</div>
<br />
<div>
    <h3>Versiones anteriores</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Archivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.VersionesAnteriores)
            {
                <tr>
                    <td>
                       <a asp-controller="Archivo" asp-action="Descargar" asp-route-idArchivo="@item.Archivo.Id">Descargar</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreacion)
                    </td>
                    <td>
                        @($"{item.Usuario.primer_nombre} {item.Usuario.primer_apellido} <{item.Usuario.Email}>")
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
