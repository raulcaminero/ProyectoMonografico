@model WebApp.Models.Modulo

@{
    ViewData["Title"] = "Delete";
}

<div class="col-10">
	<div class="card">
		<div class="card-header">
			<h4 class="p-3 mb-2 bg-primary text-white text-center">Eliminar Modulo</h4>
		</div>
		<div class="card-content">
			<div class="card-body">
				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Titulo)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Titulo)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Descripcion)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Descripcion)
					</dd>
					<dt class="col-sm-2">
						Imagen
					</dt>
					<dd class="col-sm-10">
						<img src="~/images/@Html.DisplayFor(model => model.Imagen)" />
					</dd>
					<dt class="col-sm-2">
						Estado
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Estado.EstadoNombre)
					</dd>
					<dt class="col-sm-2">
						Profesor Asignado
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.IdProfesorNavigation.NombreCompleto)
					</dd>
				</dl>
				<form asp-action="Delete">
					<input type="hidden" asp-for="Id" />
					<input type="submit" value="Eliminar" class="btn btn-danger" />
					<a asp-action="Index" class="btn btn-secondary">Regresar</a>
				</form>
			</div>
		</div>
	</div>
</div>