@model WebApp.Models.Modulo

@{
    ViewData["Title"] = "Detalles del módulo";

}
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="p-3 mb-2 bg-primary text-white text-center">Detalles</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <dl class="row">
                    <div class="col">
                        <dd>
                            <h5>@Html.DisplayFor(model => model.Titulo)</h5>
                        </dd>
                        <dd>
                            <img src="~/images/@Html.DisplayFor(model => model.Imagen)" />
                        </dd>
                    </div>
                    <div class="col">
                        <dd class="col-sm-12 text-center">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                        <br />
                        <dt>
                            Fecha de Inicio
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FechaInicio)
                        </dd>
                        <br />
                        <dt>
                            Fecha de Finalizacion
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FechaFin)
                        </dd>
                        <br />
                        <dt>
                            Servicio
                        </dt>
                        <dd>
                            (@Model.Servicio?.Servicio_Codigo?.Trim())
                            @Html.DisplayFor(model => model.Servicio.Servicio_Descripcion)
                        </dd>
                        <br />
                        <dt>
                            Profesor Encargado
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Profesor.NombreCompleto)
                        </dd>
                        <br />
                        <dt>
                            Estado
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Estado.EstadoNombre)
                        </dd>
                    </div>
                </dl>

            </div>
            <div>

                @if (User.IsInRole("Administrador"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                }
                    <a asp-action="Index" class="btn btn-secondary">Regresar </a>
                </div>
        </div>
    </div>
</div>

