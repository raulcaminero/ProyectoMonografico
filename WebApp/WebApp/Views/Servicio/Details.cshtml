@model WebApp.Models.Servicio

@{
    ViewData["Title"] = "Detalles del Servicio";
}

<div class="col-10">
	<div class="card">
		<div class="card-header">
			<h4 class="p-3 mb-2 bg-primary text-white text-center">Detalles del Servicio @Html.DisplayFor(model => model.Servicio_Codigo)</h4>
		</div>
		<div class="card-content">
			<div class="card-body">
                <dl class="row">
                    <div class="col">
                        <dt>
                            Codigo
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Servicio_Codigo)
                        </dd>
                        <dt>
                            Descripcion
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Servicio_Descripcion)
                        </dd>
                        <dt>
                            Tipo de Servicio
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.TipoServicio.TipoServicioDescripcion)
                        </dd>
                        <dt>
                            Costo
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Servicio_Costo)
                        </dd>
                    </div>
                    <div class="col">
                        <dt>
                            Fecha de Inicio
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Servicio_FechaInicio)
                        </dd>
                        <dt>
                            Fecha de Cierre
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Servicio_FechaCierre)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Estado.EstadoNombre)
                        </dd>
                        <dt>
                            Profesor Encargado
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Usuario.NombreCompleto)
                        </dd>

                    </div>
                    <div class="col">
                        <dt>
                            Campus
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Campus.Nombre)
                        </dd>
                        <dt>
                            Carrera
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Carrera.Nombre)
                        </dd>
                        <dt>
                            Facultad
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Facultad.NombreFacultad)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Escuela)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Escuela.Nombre)
                        </dd>
                       
                    </div>
                </dl>
				<div>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Servicio_Id">Editar</a>
					<a class="btn btn-secondary" asp-action="Index">Regresar al listado</a>
				</div>
			</div>
		</div>
	</div>
</div>