@model IEnumerable<WebApp.Models.Servicio>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-center pb-2" style="color:#4863A0">Lista de servicios</h1>
</div>

<p>
    <a class="btn btn-primary mb-2" asp-action="Create">Nuevo Servicio</a>
</p>
<table id="services-tb" class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Descripción
            </th>
            <th>
                <span id="sv-type-head">Tipo</span>
            </th>
            <th>
                <span id="sv-campus-head">Campus</span>
            </th>
            <th>
                <span id="sv-faculty-head">@Html.DisplayNameFor(model => model.Facultad)</span>
            </th>
            <th>
                <span id="sv-school-head">@Html.DisplayNameFor(model => model.Escuela)</span>
            </th>
            <th>
                <span id="sv-career-head">@Html.DisplayNameFor(model => model.Carrera)</span>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Servicio_Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Servicio_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoServicio.TipoServicioDescripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Campus.Nombre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Facultad.NombreFacultad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Escuela.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrera.Nombre)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Servicio_Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Servicio_Id" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Servicio_Id" class="btn btn-danger">Eliminar</a>
                    <a asp-action="Estado" asp-route-id="@item.Servicio_Id">

                        @if (item.Estado_Id == "A")
                        {
                            <span class="btn btn-warning"> Inactivar </span>
                        }
                        else
                        {
                            <span class="btn btn-success"> Activar </span>
                        }

                    </a>
                </td>
                
            </tr>
        }
    </tbody>
</table>

