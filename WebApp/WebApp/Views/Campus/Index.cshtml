@model IEnumerable<WebApp.Models.Campus>
@using WebApp.Models.Enums;

@{
    ViewData["Title"] = "Campus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center pb-2" style="color:#4863A0"> Campus</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-2">Agregar Campus</a>
</p>
<table id="campus-tb" class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>
                <span id="cp-state-head">@Html.DisplayNameFor(model => model.Estado)</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>

                    @* Solo permitir cambiar estado si no tiene un Servicio activo *@
                    @if (!item.Servicio.Any(s => s.Estado_Id == "A"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>

                        @if (item.Estado == Estados.Activo)
                        {
                            <a asp-action="Inactivate" asp-route-id="@item.Id" class="btn btn-warning">Inactivar</a>
                        }
                        else
                        {
                            <a asp-action="Activate" asp-route-id="@item.Id" class="btn btn-success">Activar</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
