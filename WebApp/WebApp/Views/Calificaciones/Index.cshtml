@model IEnumerable<WebApp.Models.Calificaciones>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-5" style="color:#4863A0">Lista de calificaciones</h1>
</div>

<p>
    <a class="btn btn-primary mb-2" asp-action="Create">Asignar Calificaciones</a>
</p>
<table id="grades-tb" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                <span id="gd-student-head">Estudiante</span>

            </th>
            <th>
                <span id="gd-module-head">@Html.DisplayNameFor(model => model.Modulo)</span>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.NombreCompleto)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modulo.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.EstadoNombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                    @* Por requerimiento del cliente las calificaciones no deben de eliminarse ni desactivarse *@
                </td>
            </tr>
        }
    </tbody>
</table>
